# Discord OAuth (Optional - only if using Discord authentication)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# MongoDB Configuration
# Local MongoDB: mongodb://localhost:27017/wu_bot
# Remote MongoDB: mongodb://username:password@host:port/wu_bot
MONGODB_URI=mongodb://localhost:27017/wu_bot

# Server Configuration
PORT=4646
NODE_ENV=production

# Frontend URLs
# Development: http://localhost:5173
# Production: https://yourdomain.com or http://your_server_ip:4646
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_PRODUCTION=http://your_server_ip:4646

# JWT Secret for authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_long_random_secret_here_replace_this_with_generated_value
